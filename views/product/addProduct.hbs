<form action="/addProduct" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" id="name" name="name" required   />
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input type="number" class="form-control" id="price" name="price" required />
  </div>
  <div class="form-group">
    <label for="color">Color:</label>
    <input type="text" class="form-control" id="color" name="color" required />
  </div>
  <label class="mt-2" for="image">Image:</label>
  <div class="form-group mt-3">
    <img id="image-preview"  width="150px" height="150px">
    <input type="file" id="form3Example4" name="image" class="form-control mt-3" accept="image/*" required
      onchange="previewImage(event)" />
  </div>
  <div class="form-group mt-3">
    <button type="submit" class="btnAdd btn-primary">Add</button>
    {{!-- <button type="button" class="btnAdd btn-secondary" onclick="resetForm()">Cancel</button> --}}
  </div>
</form>